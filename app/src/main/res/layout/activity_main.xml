<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="130"
    tools:context=".MainActivity"
    >


    <TextView
        android:id="@+id/t"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:text="0"
        android:padding="1dp"
        android:textSize="100dp"
        android:gravity="end"

        />
    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:layout_below="@+id/t1"
        android:background="@color/BLACK">
        <TextView
            android:id="@+id/c"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="C"
            android:textSize="40dp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_margin="1dp"
            android:clickable="true"
            android:onClick="clicks"/>
        <TextView
            android:id="@+id/plus"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="+/-"
            android:textSize="40dp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_margin="1dp"
            android:onClick="clicks"/>
        <TextView
            android:id="@+id/percent"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="%"
            android:textSize="40dp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_margin="1dp"
            android:onClick="clicks"/>
        <TextView
            android:id="@+id/delete"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="DEL"
            android:textSize="40dp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_margin="1dp"
            android:onClick="clicks"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:background="@color/BLACK">
        <TextView
            android:id="@+id/seven"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:textSize="40dp"
            android:text="7"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_margin="1dp"
            android:onClick="clicks"/>
        <TextView
            android:id="@+id/eight"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:textSize="40dp"
            android:text="8"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_margin="1dp"
            android:onClick="clicks"/> <TextView
        android:id="@+id/nine"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".25"
        android:text="9"
        android:textSize="40dp"
        android:onClick="clicks"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_margin="1dp"/>
        <TextView
            android:id="@+id/divide"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:onClick="clicks"
            android:textSize="40dp"
            android:text="/"
            android:textColor="@color/orange"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@color/gray"
            android:layout_margin="1dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:id="@+id/l3"
        android:background="@color/BLACK">
        <TextView
            android:id="@+id/four"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:textSize="40dp"
            android:onClick="clicks"
            android:text="4"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/five"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:textSize="40dp"
            android:text="5"
            android:onClick="clicks"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_margin="1dp"/>
        <TextView
            android:id="@+id/six"
            android:clickable="true"
            android:layout_width="0dp"
            android:onClick="clicks"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:textSize="40dp"
            android:text="6"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_margin="1dp"/>
        <TextView
            android:id="@+id/multipl"
            android:layout_width="0dp"
            android:textColor="@color/orange"
            android:clickable="true"
            android:onClick="clicks"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:textSize="40dp"
            android:text="*"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@color/gray"
            android:layout_margin="1dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:id="@+id/l4"
        android:background="@color/BLACK">
        <TextView
            android:id="@+id/one"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:textSize="40dp"
            android:text="1"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_margin="1dp"
            android:onClick="clicks"/> <TextView
        android:id="@+id/two"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".25"
        android:onClick="clicks"
        android:textSize="40dp"
        android:text="2"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_margin="1dp"
        /> <TextView
        android:clickable="true"
        android:id="@+id/three"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".25"
        android:textSize="40dp"
        android:text="3"
        android:textAlignment="center"
        android:onClick="clicks"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_margin="1dp"/> <TextView
        android:id="@+id/substract"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="@color/orange"
        android:layout_weight=".25"
        android:textSize="40dp"
        android:text="-"
        android:textAlignment="center"
        android:onClick="clicks"
        android:gravity="center_vertical"
        android:background="@color/gray"
        android:layout_margin="1dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:id="@+id/l5"

        android:background="@color/BLACK">
        <TextView
            android:id="@+id/zero"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:onClick="clicks"
            android:textSize="40dp"
            android:text="0"
            android:background="@color/white"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:gravity="center_vertical"/> <TextView
        android:id="@+id/decimal"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".25"
        android:onClick="clicks"
        android:textSize="40dp"
        android:text="."
        android:background="@color/white"
        android:layout_margin="1dp"
        android:textAlignment="center"
        android:gravity="center_vertical"
        /> <TextView
        android:id="@+id/equals"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".25"
        android:onClick="clicks"
        android:textSize="40dp"
        android:text="="
        android:background="@color/orange"
        android:layout_margin="1dp"
        android:textAlignment="center"
        android:gravity="center_vertical"

        /> <TextView
        android:id="@+id/addition"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".25"
        android:onClick="clicks"
        android:text="+"
        android:textSize="40dp"
        android:textColor="@color/orange"
        android:background="@color/gray"
        android:textAlignment="center"
        android:layout_margin="1dp"
        android:gravity="center_vertical"/>

    </LinearLayout>

</LinearLayout>